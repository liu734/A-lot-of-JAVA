<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
	<TextView android:layout_width="fill_parent" android:id="@+id/txt"
		android:layout_height="wrap_content" android:text="Stock Watcher" android:textSize="30dp" />
		
	<RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">

	<TextView android:text="Company Name" android:id="@+id/name" 
		android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="15dp"/>

	<TextView android:text="Price Change" android:id="@+id/prc" android:layout_toLeftOf="@+id/pr" android:paddingRight="30dp"
		android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="15dp"/>

	<TextView android:text="Price" android:id="@+id/pr" android:layout_alignParentRight="true"
		android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="15dp"/>

	</RelativeLayout>	

	<ListView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/list" />
		
	<LinearLayout
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content">	

		
	<EditText android:layout_width="wrap_content" android:id="@+id/txtbxe"
		android:layout_height="wrap_content" android:hint="GOOG" android:inputType="textCapCharacters"	/>	
	<Button android:layout_width="wrap_content" android:id="@+id/txtbxb"
		android:layout_height="wrap_content" android:text="Add Stock"  />	
	
	</LinearLayout>

</LinearLayout>
