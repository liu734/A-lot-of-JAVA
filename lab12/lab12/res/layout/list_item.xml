<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent">

	<TextView android:text="Name" android:id="@+id/name" 
		android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="20dp"/>

	<TextView android:text="PRC" android:id="@+id/prc" android:layout_toLeftOf="@+id/pr" android:paddingRight="57dp"
		android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="20dp"/>

	<TextView android:text="PR" android:id="@+id/pr" android:layout_alignParentRight="true"
		android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="20dp"/>

	</RelativeLayout>

</LinearLayout>
